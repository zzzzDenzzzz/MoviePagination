@model SearchViewModel
@{
    ViewData["Title"] = "Search";
}

<h1>Search</h1>

<div class="container">
    @if (Model.Error != null)
    {
        <h1 class="text-danger">@Model.Error</h1>
    }
    else if (!string.IsNullOrWhiteSpace(@Model.Title))
    {
        <p>Search results by title : @Model.Title. Total pages : @Model.TotalPages</p>

        <div class="row">
            @foreach (Cinema item in @Model.Movies)
            {
               <div class="col-3">
                    <partial name="_MovieCardPartial" model="@item"></partial>
               </div>
            }
        </div>

        <div class="d-flex justify-content-center mt-4">
            <nav aria-label="Page navigation">
                <ul class="pagination">

                    @if (Model.CurrentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link"
                               asp-action="Search"
                               asp-controller="Home"
                               asp-route-page="@(Model.CurrentPage - 1)"
                               asp-route-title="@Model.Title">Previous</a>
                        </li>
                    }

                    @if (Model.CurrentPage > 7)
                    {
                        <li class="page-item">
                            <a class="page-link"
                               asp-action="Search"
                               asp-controller="Home"
                               asp-route-page="1"
                               asp-route-title="@Model.Title">...</a>
                        </li>
                    }

                    @if (Model.TotalPages - Model.CurrentPage < 9)
                    {
                        @for (int i = Model.TotalPages - 9; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : ' ')">
                                <a class="page-link"
                                   asp-action="Search"
                                   asp-controller="Home"
                                   asp-route-page="@i"
                                   asp-route-title="@Model.Title">@i</a>
                            </li>
                        }
                    }
                    else
                    {
                        @for (int i = Model.CurrentPage - 5; i <= Model.CurrentPage + 5 && i <= Model.TotalPages; i++)
                        {
                            if (i < 1)
                            {
                                continue;
                            }
                            <li class="page-item @(i == Model.CurrentPage ? "active" : ' ')">
                                <a class="page-link"
                                   asp-action="Search"
                                   asp-controller="Home"
                                   asp-route-page="@i"
                                   asp-route-title="@Model.Title">@i</a>
                            </li>
                        }
                    }

                    @if (Model.TotalPages > Model.CurrentPage + 8)
                    {
                        <li class="page-item">
                            <a class="page-link"
                               asp-action="Search"
                               asp-controller="Home"
                               asp-route-page="@(Model.TotalPages)"
                               asp-route-title="@Model.Title">...</a>
                        </li>
                    }

                    @if (Model.TotalPages > Model.CurrentPage)
                    {
                        <li class="page-item">
                            <a class="page-link"
                               asp-action="Search"
                               asp-controller="Home"
                               asp-route-page="@(Model.CurrentPage + 1)"
                               asp-route-title="@Model.Title">Next</a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    }
    else
    {
        <p>Not results</p>
    }
</div>
